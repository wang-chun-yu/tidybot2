<!-- simple_arm.xml -->
<mujoco>
  <option timestep="0.002"/>
  
  <worldbody>
    <!-- 地面 -->
    <geom type="plane" size="2 2 0.5" rgba="0.9 0.9 0.9 1"/>
    <light pos="0 0 3"/>
    
    <!-- 基座 -->
    <body name="base" pos="0 0 0.2">
      <geom type="cylinder" size="0.1 0.2" rgba="0.5 0.5 0.5 0.5"/>
      
      <!-- 第一个连杆 -->
      <body name="link1" pos="0 0 0.2">
        <joint name="joint1" type="hinge" axis="0 0 1" range="-180 180"/>
        <geom type="box" size="0.05 0.05 0.2" pos="0 0 0.2" rgba="1 0 0 0.5"/>
        
        <!-- 第二个连杆 -->
        <body name="link2" pos="0 0.1 0.35">
          <joint name="joint2" type="hinge" axis="0 1 0" range="-180 180"/>
          <geom type="box" size="0.05 0.05 0.15" pos="0 0 0.10" rgba="0 1 0 1"/>
          
          <!-- 末端 -->
          <site name="end_effector" pos="0 0 0.25" size="0.02"/>
        </body>
      </body>
    </body>
  </worldbody>
  
  <actuator>
    <motor name="motor1" joint="joint1" gear="1" ctrlrange="-5 5"/>
    <motor name="motor2" joint="joint2" gear="1" ctrlrange="-20 20"/>
  </actuator>
</mujoco>